@model IEnumerable<MyJobBoard.DATA.EF.Location>

@{
    ViewBag.Title = "Index";
}

<br /> <br />
<br /> <br />

<div class="open-container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                Manager
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDetail.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }, new { @class = "far fa-edit" })
                   
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationId }, new { @class = "far fa-trash-alt" })
                </td>
            </tr>
        }

    </table>
</div>
